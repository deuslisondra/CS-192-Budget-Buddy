<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <Button
        android:id="@+id/btnTransactions"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="600dp"
        android:backgroundTint="#009688"
        android:text="transactions"
        android:textSize="10dp" />

    <Button
        android:id="@+id/btnWallets"
        android:layout_width="90dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="600dp"
        android:layout_marginEnd="15dp"
        android:layout_toStartOf="@+id/btnTransactions"
        android:backgroundTint="#009688"
        android:text="wallets"
        android:textSize="10dp" />

    <Button
        android:id="@+id/btnProfile"
        android:layout_width="90dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:layout_marginTop="600dp"
        android:layout_toEndOf="@+id/btnTransactions"
        android:backgroundTint="#009688"
        android:text="profile"
        android:textSize="10dp" />

    <Button
        android:id="@+id/btnSettings"
        android:layout_width="90dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:backgroundTint="#009688"
        android:layout_marginLeft="250dp"
        android:textSize="10dp"
        android:text="settings" />

    <TextView
        android:id="@+id/textTotalBalance"
        android:layout_marginTop="150dp"
        android:textSize="20dp"
        android:layout_centerHorizontal="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Total Balance:" />

    <TextView
        android:id="@+id/textBalance"
        android:layout_marginTop="180dp"
        android:textSize="50dp"
        android:layout_centerHorizontal="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="P 420.69" />



</RelativeLayout>